
@{
    Layout = "_LoginLayout";
}
@model LoginCredDTO_client

<h3 class="mt-5">@ViewData["Title"]</h3>
<div class="text-center">
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" asp-action="Login" method="post">
                <h3>Hello Please provide credentials to log in.</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-2">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" >Forgot your password?</a>
                    </p>
                    <p>
                        <a>Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    </div>
    </div>
