@model CustomerDTO_client
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.ErrorMessage
    </div>
}
<form asp-action="AddCustomer" method="post" role="form">
<h3 class="my-5">
    Please the details for the new customer.
</h3>

<div asp-validation-summary="All" class="text-danger"></div>
<div class="col-6">
    <div class="row g-2">
        <div class="col-12">
            <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control my-input" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
            <div class="col-12">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control my-input" />
                <span asp-validation-for="PhoneNumber" class="text-danger "></span>
            </div>
            <div class="col-12">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control my-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="Add Customer" />
                </div>
            </div>
        </div>
    </div>
</form>